{
    # Global options
    frankenphp
    order php_server before file_server
}

:8080 {
    # Set the root to Laravel's public directory
    root * /app/public

    # Enable compression
    encode zstd gzip

    # Handle PHP requests
    php_server

    # Serve static files
    file_server

    # Logging
    log {
        output stdout
        format console
    }
}
